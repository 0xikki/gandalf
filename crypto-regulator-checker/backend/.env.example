# Core settings
ENVIRONMENT=development
DEBUG=false
VERSION=1.0.0
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=app.log
LOG_REQUESTS=true
LOG_RESPONSES=true

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=crypto_regulator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Vector store
VECTOR_STORE_IMPLEMENTATION=chroma
VECTOR_STORE_PATH=./data/vector_store
VECTOR_STORE_COLLECTION=regulatory_docs
VECTOR_STORE_DISTANCE_METRIC=cosine
VECTOR_STORE_EMBEDDING_DIM=384

# Embeddings
EMBEDDINGS_MODEL=all-MiniLM-L6-v2
EMBEDDINGS_NORMALIZE=true
EMBEDDINGS_MAX_SEQ_LENGTH=512
EMBEDDINGS_BATCH_SIZE=32
EMBEDDINGS_CACHE_TTL=3600

# LLM
LLM_PROVIDER=google
LLM_MODEL=gemini-pro
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.1
LLM_CACHE_TTL=3600
LLM_REQUEST_TIMEOUT=30
GOOGLE_API_KEY=your_api_key_here

# Document processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MIN_CHUNK_SIZE=20
SPLIT_ON_NEWLINE=true
RESPECT_SENTENCES=true
MAX_UPLOAD_SIZE=26214400  # 25MB in bytes
ALLOWED_FILE_EXTENSIONS=.pdf,.docx

# Cache settings
CACHE_BACKEND=redis
CACHE_URL=redis://redis:6379
CACHE_TTL=3600
CACHE_MAX_MEMORY=1gb
CACHE_EVICTION_POLICY=allkeys-lru

# Security
SECRET_KEY=your-secret-key-here  # Change this in production!
ALLOWED_HOSTS=*
CORS_ORIGINS=*
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_FAILURE_THRESHOLD=3
HEALTH_CHECK_SUCCESS_THRESHOLD=1
HEALTH_CHECK_INCLUDE_METRICS=true
HEALTH_CHECK_DEPENDENCIES=redis,postgres

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Database settings
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=0xf0rdsn0tbr0gues
POSTGRES_DB=crypto_regulator
SQLALCHEMY_DATABASE_URI=postgresql://postgres:0xf0rdsn0tbr0gues@localhost/crypto_regulator 